<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resultStudent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="30dp"
            android:text="Result"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="First Semester Result"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="Subject"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Marks"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="Mathematics"
                    android:layout_weight="1"
                    android:background="@drawable/shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Marks"
                    android:layout_weight="1"
                    android:id="@+id/maths"
                    android:background="@drawable/shape"/>
            </TableRow><TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="Physics"
                android:layout_weight="1"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marks"
                android:layout_weight="1"
                android:id="@+id/phy"
                android:background="@drawable/shape"/>
        </TableRow><TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="Chemistry"
                android:layout_weight="1"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marks"
                android:layout_weight="1"
                android:id="@+id/chem"
                android:background="@drawable/shape"/>
        </TableRow><TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="Workshop"
                android:layout_weight="1"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marks"
                android:layout_weight="1"
                android:id="@+id/work"
                android:background="@drawable/shape"/>
        </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/spi1"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="Second Semester Result"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="Subject"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Marks"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:background="@drawable/shape2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:text="Mechanics"
                    android:layout_weight="1"
                    android:background="@drawable/shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Marks"
                    android:layout_weight="1"
                    android:id="@+id/mech"
                    android:background="@drawable/shape"/>
            </TableRow><TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="Ecology"
                android:layout_weight="1"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marks"
                android:layout_weight="1"
                android:id="@+id/eco"
                android:background="@drawable/shape"/>
        </TableRow><TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="English"
                android:layout_weight="1"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marks"
                android:layout_weight="1"
                android:id="@+id/english"
                android:background="@drawable/shape"/>
        </TableRow><TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15dp"
                android:text="Communication"
                android:layout_weight="1"
                android:background="@drawable/shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Marks"
                android:layout_weight="1"
                android:id="@+id/comm"
                android:background="@drawable/shape"/>
        </TableRow>
        </TableLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:textStyle="bold"
            android:id="@+id/spi2"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:text="Graph:"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>
        <com.jjoe64.graphview.GraphView
            android:layout_width="350dp"
            android:layout_height="270dp"
            android:padding="10dp"
            android:id="@+id/graph"
            app:seriesType="line"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"/>



    </LinearLayout>

</ScrollView>